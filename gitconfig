	name = Toban Wiebe
[core]
	editor = nvim
[color]
	ui = auto
[push]
	default = simple
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[github]
	user = tobanw

# git pull rebases without flattening local merges
# (instead of branch.autosetuprebase = always)
[pull]
	rebase = preserve

# show info about submodules
[status]
	submoduleSummary = true
[diff]
	submodule = log
	tool = vimdiff
[merge]
	tool = vimdiff
	ff = false # no-ff: always create a merge commit
[difftool "vimdiff"]
	path = nvim
[mergetool "vimdiff"]
	path = nvim
[difftool]
	prompt = false
