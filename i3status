# Using ttf-font-awesome characters.

general {
        colors = true
        interval = 5
		output_format = "i3bar"	
}


order += "arch_updates"
order += "weather_yahoo"
order += "taskwarrior"
order += "cmus"
order += "volume master"
order += "wireless _first_"
order += "online_status"
order += "battery 1"
order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "tztime local"


arch_updates {
		cache_timeout = 10800
		format = " {pacman}"
}

weather_yahoo {
		cache_timeout = 1800
		woeid =	12765491
		units = "C"
		format_today = "{icon}{temp}°"
		format_forecast = "{icon}{high}°"
		forecast_include_today = true
		forecast_text_separator = ""
}

cmus {
		cache_timeout = 1
		indicator_play = ""
		indicator_pause = ""
		indicator_stop = ""
}

volume master {
		format = " %volume"
		format_muted = " (%volume)"
		device = "pulse"
}

wireless _first_ {
        format_up = " %quality"
        format_down = " down"
}

battery 1 {
        format = "%status%percentage %remaining"
		hide_seconds = true
		integer_battery_capacity = true
		last_full_capacity = true
		status_chr = ""
		status_bat = "⚡"
		status_full = ""
		threshold_type = time
		low_threshold = 20
		path = "/sys/class/power_supply/BAT1/uevent"
}

cpu_usage {
		format = " %usage"
}

cpu_temperature 0 {
		format = "%degrees°C"
		#path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
		path = "/sys/class/thermal/thermal_zone1/temp"
		max_threshold = 75
}

tztime local {
        format = "%b %d - %H:%M"
}

disk "/" {
        format = " %avail"
		prefix_type = "custom"
		low_threshold = 2
		threshold_type = "gbytes_avail"
}
