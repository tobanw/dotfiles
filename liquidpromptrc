# number of directories to keep at beginning of shortened path
LP_PATH_KEEP=1

# temperature threshold
LP_TEMP_THRESHOLD=70

# use prompt as terminal window title
LP_ENABLE_SCREEN_TITLE=1

# different colors for ssh hosts
LP_ENABLE_SSH_COLORS=1

# no temperature symbol
LP_MARK_TEMP=
